@model IEnumerable<Web.Models.ActivityOperation>

@{
    ViewBag.Title = "目前活动";
}
<style>
    .table > tbody > tr > th {
        text-align: center;
        vertical-align: middle;
    }

    .table > tbody > tr > td {
        text-align: center;
        vertical-align: middle;
    }
    body {
        background: url(/img/HeaderGreyDenim.jpg);
        background-repeat: repeat;
    }
    p {
        font-size:10px;
    }

</style>
<section class="sec2" style="background-image:url(../../img/mate1.jpg);">
    <div class="cover">
    </div>
    <div class="row animated pulse">
        <b class="secheader">活动 | @ViewBag.Title </b>
        <p class="seccontent">
            京贸创客创业平台是对外经济贸易大学国际经济贸易学院与北京其他兄弟院校共建的创业平台。在这里你能找到自己的创业伙伴，获得导师指导，注册并成立自己的创业公司。
        </p>
    </div>
</section>
<section style="display: table;width: 100%;height: auto; padding: 100px 0 100px; color:black;position: relative;">
    <div class="row" style="padding:0 5%;">
        <b style="font-size:16px;font-weight:bold;color:red;">
            @TempData["DeniedInfo"]
        </b>
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Count)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Limit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Limit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @Html.Raw(item.ShortContent)
                    </td>
                    <td>
                        @Html.ActionLink("申请", "Apply", new { id = item.Id },new { @class = "btn-sm btn-success"}) 
                        @Html.ActionLink("详情", "Details", new { id = item.Id }, new { @class = "btn-sm btn-info" }) 
                        @Html.ActionLink("退出", "Quit", new { id = item.Id }, new { @class = "btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </table>
    </div>
</section>


