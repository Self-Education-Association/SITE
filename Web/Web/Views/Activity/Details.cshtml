@model Web.Models.ActivityOperation

@{
    ViewBag.Title = "活动详情";
}

<style>
    h2 {
        font-family: 'Microsoft YaHei';
        color: #577492;
        text-align: center;
    }

    .table > tbody > tr > th {
        text-align: center;
    }

    .table > tbody > tr > td {
        text-align: center;
    }

    body {
        background: url(/img/HeaderGreyDenim.jpg);
        background-repeat: repeat;
    }
</style>
<section class="sec2">
    <div class="cover">
    </div>
    <div class="row animated pulse">
        <b class="secheader">活动 | 活动详情 </b>
        <p class="seccontent">
            京贸创客创业平台是对外经济贸易大学国际经济贸易学院与北京其他兄弟院校共建的创业平台。在这里你能找到自己的创业伙伴，获得导师指导，注册并成立自己的创业公司。
        </p>
    </div>
</section>
<section class="pagesec">
    <div class="container-fluid pagecontainer">
        <div class="row">
            <b style="font-size:16px;font-weight:bold;color:red;">
                @TempData["DeniedInfo"]
            </b>
            <ul class="breadcrumb col-md-6">
                <li>
                    <a href="#">首页</a> <span class="divider"></span>
                </li>
                <li class="active">
                    活动<span class="divider"></span>
                </li>
                <li class="active">活动详情</li>
            </ul>
        </div>
        <div class="row" style="padding:0 5%;">
            <dl class="dl-horizontal" style="font-size:14px;">
                <dt>
                    @Html.DisplayNameFor(model => model.Count)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Count)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Limit)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Limit)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.StartTime)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StartTime)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.EndTime)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.EndTime)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Content)
                </dt>

                <dd>
                    @Html.Raw(Model.Content)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("申请", "Apply", new { id = Model.Id }, new { @class = "btn-sm btn-success" }) |
            @Html.ActionLink("退出", "Quit", new { id = Model.Id }, new { @class = "btn-sm btn-danger" }) |
            @Html.ActionLink("返回列表", "Index",null ,new { @class = "btn-sm btn-warning" })
        </p>
    </div>
</section>