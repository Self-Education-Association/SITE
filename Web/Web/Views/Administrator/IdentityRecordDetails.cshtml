@model Web.Models.IdentityRecord

@{
    ViewBag.Title = "审核详情";
}
<section class="sec2">
    <div class="cover">
    </div>
    <div class="row animated pulse">
        <b class="secheader">管理员 | 审核详情 </b>
        <p class="seccontent">
            京贸创客创业平台是对外经济贸易大学国际经济贸易学院与北京其他兄弟院校共建的创业平台。在这里你能找到自己的创业伙伴，获得导师指导，注册并成立自己的创业公司。
        </p>
    </div>
</section>
<section style="display: table;width: 100%;height: auto; padding: 100px 0 100px; color:black;position: relative;">
    <div class="row" style="padding:0 5%;">
        <div class="col-xs-2">
            @Html.Partial("_AdminMenuPartial")
        </div>
        <div class="col-xs-10 board">
            <div>
                <h4>审核详情</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.User.DisplayName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.User.DisplayName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.User.School)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.User.School)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.User.Academy)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.User.Academy)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.IdNumber)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.IdNumber)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Time)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Time)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>

                    <dd>
                        @Web.Models.EnumExtension.GetEnumCustomDescription(Model.Status)
                    </dd>
                </dl>
                <img src="@Url.Content(Model.FrontIdCard.GetUrl())" style="height:200px;width:200px" />
                <img src="@Url.Content(Model.BackIdCard.GetUrl())" style="height:200px;width:200px" />
            </div>
        <br />
        <p>
            @Html.ActionLink("审批通过", "IdentityRecordApprove", new { id = Model.Id, isApprove = true }) |
            @Html.ActionLink("审批驳回", "IdentityRecordApprove", new { id = Model.Id, isApprove = false }) |
            @Html.ActionLink("返回", "Index")
        </p>
        </div>
    </div>
</section>
