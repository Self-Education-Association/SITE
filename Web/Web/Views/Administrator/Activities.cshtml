@model Web.Models.ListPage<Web.Models.ActivityOperation>

@{
    ViewBag.Title = "活动列表";
    int index = Model.PageIndex + 1;
}
<section class="sec2">
    <div class="cover">
    </div>
    <div class="row animated pulse">
        <b class="secheader">管理员 |  活动列表</b>
        <p class="seccontent">
            京贸创客创业平台是对外经济贸易大学国际经济贸易学院与北京其他兄弟院校共建的创业平台。在这里你能找到自己的创业伙伴，获得导师指导，注册并成立自己的创业公司。
        </p>
    </div>
</section>
<section style="display: table;width: 100%;height: auto; padding: 100px 0 100px; color:black;position: relative;">
    <div class="row" style="padding:0 5%;">
        <div class="col-xs-2">
            @Html.Partial("_AdminMenuPartial")
        </div>
        <div class="col-xs-10 board">
            <h4>活动管理</h4>
            <hr />
            <p>
                @Html.ActionLink("添加活动", "ActivityCreate")
            </p>
            @{
                <ul class="pager">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="previous ">@Html.ActionLink("前一页", "Activities", new { page = Model.PageIndex - 1 })</li>
                    }
                    else
                    {
                        <li class="previous disabled"><a>前一页</a></li>
                    }
                    <li><a>@index</a></li>
                    @if (Model.HasNextPage)
                    {
                        <li class="previous ">@Html.ActionLink("后一页", "Activities", new { page = Model.PageIndex + 1 })</li>
                    }
                    else
                    {
                        <li class="previous disabled"><a>后一页</a></li>
                    }
                </ul>
            }
            <table class="table table-striped">
                <tr>
                    <th>
                        活动名称
                    </th>
                    <th>
                        报名人数
                    </th>
                    <th>
                        人数上限
                    </th>
                    <th>
                        开始时间
                    </th>
                    <th>
                        结束时间
                    </th>
                    <th>
                        活动摘要
                    </th>
                    <th>
                        启用中
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Count)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Limit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortContent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Enabled)
                        </td>
                        <td style="min-width:100px;">
                            @Html.ActionLink("编辑", "ActivityEdit", new { id = item.Id })|
                            @Html.ActionLink("删除", "ActivityDelete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</section>