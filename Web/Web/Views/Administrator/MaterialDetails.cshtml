@model Web.Models.Material

@{
    ViewBag.Title = "材料详情";
}

<section class="sec3">
    <div class="cover">
    </div>
    <div class="row animated pulse">
        <b class="secheader">管理员 | 材料详情 </b>
        <p class="seccontent">
            京贸创客创业平台是对外经济贸易大学国际经济贸易学院与北京其他兄弟院校共建的创业平台。在这里你能找到自己的创业伙伴，获得导师指导，注册并成立自己的创业公司。
        </p>
    </div>
</section>
<section style="display: table;width: 100%;height: auto; padding: 100px 0 100px; color:black;position: relative;">
    <div class="row" style="padding:0 5%;">
        <div class="col-xs-2">
            @Html.Partial("_AdminMenuPartial")
        </div>
        <div class="col-xs-10 board">
            <h4>材料详情</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Time)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Time)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Type)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Type)
                </dd>

            </dl>
            @if (Model.Type == Web.Models.MaterialType.Download)
            {
                <a href="@Url.Content(Model.GetUrl())">下载</a>
            }
            else
            {
                <img src="@Url.Content(Model.GetUrl())" style="height:200px;width:200px" />
            }

            <p>
                @Html.ActionLink("编辑", "MaterialEdit", new { id = Model.Id }) |

                @Html.ActionLink("返回列表", "Materials")
            </p>
        </div>
    </div>
</section>


   