@model Web.Models.Article

@{
    ViewBag.Title = "观点详情";
}

<style>
    body {
        background: url(/img/HeaderGreyDenim.jpg);
        background-repeat: repeat;
    }

    h2 {
        font-family: 'Microsoft YaHei';
        color: #577492;
        text-align: center;
    }

    .table > tbody > tr > th {
        text-align: center;
    }

    .table > tbody > tr > td {
        text-align: center;
    }

    p
    {
        word-wrap:break-word; 
        word-break:normal; 
    }
</style>
<section class="sec2">
    <div class="cover">
    </div>
    <div class="row animated pulse">
        <b class="secheader">新闻 | 观点详情</b>
        <p class="seccontent">
            京贸创客创业平台是对外经济贸易大学国际经济贸易学院与北京其他兄弟院校共建的创业平台。在这里你能找到自己的创业伙伴，获得导师指导，注册并成立自己的创业公司。
        </p>
    </div>
</section>
<section class="pagesec" style="display:block">
    <div class="container-fluid pagecontainer">
        <div class="row" style="padding:20px 15%;">
            <ol class="breadcrumb">
                <li><a href="/Home/Index">首页</a></li>
                <li><a href="/Home/VoicePoints">新锐观点</a></li>
                <li class="active">观点详情</li>
            </ol>
            <p align="center" style="color:black;font-family:'Microsoft YaHei';font-size:20px;font-weight:bolder;margin-bottom:0;">@Model.Title</p>
            <div class="col-xs-12 raw">
                <p align="center" style="color:black;font-family:'Microsoft YaHei';font-size:24px;font-weight:bolder;margin-bottom:20px;">@Model.Title</p>
                <p style="font-weight:bold;text-align:center;">@Model.Time<br /></p>
                <p style="font-family:SimHei;font-weight:bold;font-size: 14px;margin-bottom:5px;">
                    摘要： @Html.DisplayFor(model => model.ShortContent)
                </p>
                <p style="font-family:YouYuan;">
                    @Html.Raw(Model.ContentStored)
                </p>
            </div>
        </div>
    </div>
</section>