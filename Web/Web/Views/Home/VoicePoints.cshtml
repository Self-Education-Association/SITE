@model Web.Models.ListPage<Web.Models.Article>
@{
    ViewBag.Title = "新锐观点";
    int index = Model.PageIndex + 1;
}
<style>
    body {
        background: url(/img/HeaderGreyDenim.jpg);
        background-repeat: repeat;
    }

    p {
        word-wrap: break-word;
        word-break: normal;
    }
</style>
<section class="sec2">
    <div class="cover">
    </div>
    <div class="row animated pulse">
        <b class="secheader">声音 | 新锐观点 </b>
        <p class="seccontent">
            京贸创客创业平台是对外经济贸易大学国际经济贸易学院与北京其他兄弟院校共建的创业平台。在这里你能找到自己的创业伙伴，获得导师指导，注册并成立自己的创业公司。
        </p>
    </div>
</section>
<section style="display: table;width: 100%;height: auto; padding: 100px 0 100px; color:black;position: relative;">
    <div class="container-fluid" style="padding-left:10%;padding-right:10%">
        <div class="row">
            <ul class="breadcrumb col-md-3 col-xs-6" style="font-family: 'Arial Unicode MS','Microsoft YaHei UI';">
                <li>
                    <a href="#">首页</a> <span class="divider"></span>
                </li>
                <li>
                    <span>声音</span><span class="divider"></span>
                </li>
                <li>
                    <span>新锐观点</span>
                </li>
            </ul>
        </div>
        @{
            <ul class="pager">
                @if (Model.HasPreviousPage)
                {
                    <li class="previous ">@Html.ActionLink("前一页", "VoiceNews", new { page = Model.PageIndex - 1 })</li>
                }
                else
                {
                    <li class="previous disabled"><a>前一页</a></li>
                }
                <li><a>@index</a></li>
                @if (Model.HasNextPage)
                {
                    <li class="previous ">@Html.ActionLink("后一页", "VoiceNews", new { page = Model.PageIndex + 1 })</li>
                }
                else
                {
                    <li class="previous disabled"><a>后一页</a></li>
                }
            </ul>
        }
        <div class="row">
            @foreach (Web.Models.Article item in Model)
            {
                <div class="col-md-4 col-xs-12">
                    <div class="feature" style="position:relative;">
                        <img src="@Url.Content(item.Image.GetUrl())" alt="Compas">
                        <h3 class="featuretitle">@item.Title</h3>
                        <p class="featurep">
                            @item.ShortContent
                        </p>
                        <a class="btn btn-primary btn-large btn-block imgbtn" href="@Url.Content(item.GetUrl())" style="background-color:rgb(0,161,196)">阅读详细</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
