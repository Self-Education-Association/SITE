@model List<Web.Models.HomeTutorOnlineViewModel>

@{
    ViewBag.Title = "导师在线";
}

<style>
    body {
        background: url(/img/HeaderGreyDenim.jpg);
        background-repeat: repeat;
    }
</style>
<section class="sec2" style="background-image:url(/img/chengxin1.jpg)">
    <div class="cover">
    </div>
    <div class="row animated pulse">
        <b class="secheader">培育 | 导师在线 </b>
        <p class="seccontent">
            京贸创客创业平台是对外经济贸易大学国际经济贸易学院与北京其他兄弟院校共建的创业平台。在这里你能找到自己的创业伙伴，获得导师指导，注册并成立自己的创业公司。
        </p>
    </div>
</section>
<section class="pagesec">
    <div class="container-fluid pagecontainer">
        <div class="row">
            <ul class="breadcrumb col-md-6">
                <li>
                    <a href="#">首页</a> <span class="divider"></span>
                </li>
                <li class="active">
                    导师<span class="divider"></span>
                </li>
                <li class="active">导师在线</li>
            </ul>
        </div>
        <div style="padding:20px 15%">
            <h5 align="center" style="color:black;font-family:SimHei">导师在线</h5>
            @if (Model == null || Model.Count == 0)
            {
                <a>敬请期待。</a>
            }
            else
            {
                foreach (var item in Model)
                {
                    <hr />
                    <div class="col-xs-3">
                        <img src="@Url.Content(item.Avatar.GetUrl())" height=185 width=125 />
                    </div>
                    <div class="col-xs-9" style="font-family:'Microsoft YaHei';">
                        <p><b>导师：</b>@item.Name</p>
                        <p><b>职位：</b>@item.Position</p>
                        <p><b>简介：</b>@item.Introduction</p>
                        @foreach (var c in item.Courses)
                        {
                            <a href="@Url.Action("Details","Course",new { id=c.Id})" class="btn btn-info">@c.Name - 可报名时间 @c.StartTime 至 @c.EndTime</a>
                        }
                    </div>
                   
                }
            }
        </div>
    </div>
</section>