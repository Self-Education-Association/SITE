<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | 贸大X-Lab</title>
    @Styles.Render("~/Content/css")
    <link type="text/css" rel="stylesheet" href="~/Content/flat-ui.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/animate.css" />
    <link rel="shortcut icon" href="~/img/favicon.ico">
    <script type="text/javascript" src="~/ckeditor/ckeditor.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/flat-ui.js"></script>
    <script src="~/Scripts/flat-ui.min.js"></script>
    <style>
        .navbar-nav > li > .dropdown-menu {
            margin-top: 0px;
        }

        .navbar-nav > li > a {
            padding: 15px 15px;
            line-height: 23px;
            font-weight: 700;
            font-family: 'Arial Unicode MS','Microsoft YaHei UI';
        }
    </style>
</head>
<body>
    <div class="navbar" role="navigation" style="padding-bottom:1%;padding-top:1%;">
        <div class="row">
            <div class="navbar-header col-md-offset-2  col-xs-offset-0">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">X-Lab navigation</span>
                </button>
                <a class="navbar-brand" href="/home">京贸创客</a>
            </div>
            <div class="navbar-collapse collapse" style="padding-left:0;padding-right:0;">
                <ul class="nav navbar-nav">
                    <li class="a">
                        <a href="#" data-toggle="dropdown" id="dropdownMenu1"><span class="fui-mic"></span>声音</a>
                        <ul class="dropdown-menu aa animated fadeIn" role="menu" aria-labelledby="dropdownMenu1">
                            <li><a href="/Home/VoiceNews">近期新闻</a></li>
                            <li><a href="/Home/VoicePoints">新锐观点</a></li>
                            <li><a href="/Home/constructing">比赛天地</a></li>
                        </ul>
                    </li>
                    <li class="a">
                        <a href="#" data-toggle="dropdown" id="dropdownMenu2"><span class="fui-windows-8"></span>学习</a>
                        <ul class="dropdown-menu aa animated fadeIn" role="menu" aria-labelledby="dropdownMenu2">
                            <li><a href="/Home/LearnSelf">个人学习</a></li>
                            <li><a href="/Home/LearnSelf#Cou">课程学习</a></li>
                            <li><a href="/Home/LearnSelf#Pro">项目学习</a></li>
                            <li><a href="/Home/Mooc">MOOC</a></li>
                        </ul>
                    </li>
                    <li class="a">
                        <a href="#" data-toggle="dropdown" id="dropdownMenu3"><span class="fui-new"></span>在线</a>
                        <ul class="dropdown-menu aa animated fadeIn" role="menu" aria-labelledby="dropdownMenu3">
                            <li><a href="/Room/Index">场地预约</a></li>
                            <li><a href="/Home/Download">资料下载</a></li>
                            <li><a href="/Home/constructing">视频库</a></li>
                            <li><a href="/Course/Index">课程预约</a></li>
                        </ul>
                    </li>
                    <li class="a">
                        <a href="#" data-toggle="dropdown" id="dropdownMenu4"><span class="fui-gear"></span>活动</a>
                        <ul class="dropdown-menu aa animated fadeIn" role="menu" aria-labelledby="dropdownMenu4">
                            <li><a href="/Activity/Index">目前活动</a></li>
                            <li><a href="/Activity/Index">往期活动</a></li>
                        </ul>
                    </li>
                    <li class="a">
                        <a href="#" data-toggle="dropdown" id="dropdownMenu5"><span class="fui-star"></span>培育</a>
                        <ul class="dropdown-menu aa animated fadeIn" role="menu" aria-labelledby="dropdownMenu5">
                            <li><a href="/Home/TutorOnline">导师在线</a></li>
                            <li><a href="/Home/TutorJoin">成为导师</a></li>
                        </ul>
                    </li>
                    <li class="a">
                        <a href="#" data-toggle="dropdown" id="dropdownMenu6"><span class="fui-bookmark"></span>关于</a>
                        <ul class="dropdown-menu aa animated fadeIn" role="menu" aria-labelledby="dropdownMenu6">
                            <li><a href="/Home/AboutSite">京贸创客</a></li>
                            <li><a href="/Home/AboutNew">创业企业</a></li>
                            <li><a href="/Manage/Project">创业项目</a></li>
                        </ul>
                    </li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>

    @RenderBody()

    <div class="col-xs-12" style="padding-top:50px;padding-bottom:20px;min-height:225px;background-color:white;font-size:12px;font-family:'Microsoft YaHei UI','Arial Unicode MS';">
        <dl class="col-md-1 col-xs-1 col-md-offset-2 col-sm-offset-1 col-xs-offset-0">
            <dt>声音</dt>
            <dd><a href="/Home/VoiceNews">近期新闻</a></dd>
            <dd><a href="/Home/VoicePoints">新锐观点</a></dd>
            <dd><a href="/Home/constructing">比赛天地</a></dd>
        </dl>
        <dl class="col-md-1 col-xs-1">
            <dt>学习</dt>
            <dd><a href="/Home/LearnSelf">个人学习</a></dd>
            <dd><a href="/Home/LearnSelf#Cou">课程学习</a></dd>
            <dd><a href="/Home/LearnSelf#Pro">项目学习</a></dd>
            <dd><a href="/Home/Mooc">MOOC</a></dd>
        </dl>
        <dl class="col-md-1 col-xs-1">
            <dt>在线</dt>
            <dd><a href="/Room/Index">场地预约</a></dd>
            <dd><a href="/Home/Download">资料下载</a></dd>
            <dd><a href="/Home/constructing">视频库</a></dd>
            <dd><a href="/Course/Index">课程预约</a></dd>
        </dl>
        <dl class="col-md-1 col-xs-1">
            <dt>活动</dt>
            <dd><a href="/Activity/Index">目前活动</a></dd>
            <dd><a href="/Activity/Index">往期活动</a></dd>
        </dl>
        <dl class="col-md-1 col-xs-1">
            <dt>培育</dt>
            <dd><a href="/Home/TutorOnline">导师在线</a></dd>
            <dd><a href="/Home/TutorJoin">成为导师</a></dd>
        </dl>
        <dl class="col-md-1 col-xs-1">
            <dt>关于</dt>
            <dd><a href="/Home/AboutSite">京贸创客</a></dd>
            <dd><a href="/Home/AboutNew">创业企业</a></dd>
            <dd><a href="/Manage/Project">创业项目</a></dd>
        </dl>
        <dl class="col-md-3 col-xs-3">
            <dt>关注微信</dt>
            <dd><img src="~/img/viewfile.jpg" style="height:150px;width:150px;"></dd>
        </dl>

    </div>
    <div class="clearfix"></div>
    <div>
        <span style="color:white;font-family:Microsoft YaHei;text-align:center;position:fixed;bottom:0;font-size:8px;z-index:1000;">&copy; @DateTime.Now.Year - 对外经济贸易大学SEA团队</span>
    </div>
    @if (!string.IsNullOrWhiteSpace(ViewBag.Alert))
    {
        <script>
            alert("@ViewBag.Alert");
        </script>
    }
    @if (TempData["Alert"] != null && !string.IsNullOrWhiteSpace(TempData["Alert"].ToString()))
    {
        <script>
            alert("@TempData["Alert"].ToString()");
        </script>
    }
</body>
</html>
