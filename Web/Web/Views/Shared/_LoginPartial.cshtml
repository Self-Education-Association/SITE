@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated && Web.Models.Extensions.GetCurrentUser() != null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right", @style = "display:flex;" }))
    {
        @Html.AntiForgeryToken()
            <li class="nava hidden-sm hidden-xs">
                @Html.ActionLink("你好，" + Web.Models.Extensions.GetCurrentUser().DisplayName + "！", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @style = "padding:0 0;line-height: 1.72222;font-weight:bold;color:white" })
            </li>
            <li class="nava visible-sm visible-xs">
                @Html.ActionLink("管理", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @style = "padding:0 0;line-height: 1.72222;font-weight:bold;color:white" })
            </li>
            <li class="nava"><a href="javascript:document.getElementById('logoutForm').submit()" style = "padding:0 0;line-height: 1.72222;font-weight:bold;color:white">注销</a></li>
    }
}
else
{
    <li class="nava" style="margin:5px 5px">@Html.ActionLink("注册", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @style = "padding:0 0;line-height: 1.72222;font-weight:bold;color:white" })</li>
    <li class="nava" style="margin:5px 5px">@Html.ActionLink("登录", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @style = "padding:0 0;line-height: 1.72222;font-weight:bold;color:white" })</li>

}
