@model Web.Models.TeamEvent

@{
    ViewBag.Title = "创建";
}

@Scripts.Render("~/bundles/timepickerscripts")
@Styles.Render("~/bundles/timepickerstyles")
<script type="text/javascript">
    $(function () {
        $(".ui_timepicker").datetimepicker({
            //showOn: "button",
            //buttonImage: "./css/images/icon_calendar.gif",
            //buttonImageOnly: true,
            showSecond: true,
            timeFormat: 'HH:mm:ss',
            dateFormat: 'yy/mm/dd',
            stepHour: 1,
            stepMinute: 1,
            stepSecond: 1
        })
    })
</script>
<section class="sec2">
    <div class="cover">
    </div>
    <div class="row animated pulse">
        <b class="secheader">团队事项 |  创建</b>
        <p class="seccontent">
            京贸创客创业平台是对外经济贸易大学国际经济贸易学院与北京其他兄弟院校共建的创业平台。在这里你能找到自己的创业伙伴，获得导师指导，注册并成立自己的创业公司。
        </p>
    </div>
</section>
<section style="display: table;width: 100%;height: auto; padding: 100px 0 100px; color:black;position: relative;">
    <div class="row" style="padding:0 5%;">
        <b style="font-size:16px;font-weight:bold;color:red;">
            @TempData["ErrorInfo"]
        </b>
        <div class="col-xs-2">
            @Html.Partial("_EventsPartial")
        </div>
        <div class="col-xs-10 board">
            <!--以下为模板内容-->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>添加</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-xs-2">事项名称</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EventName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EventName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2">事项内容</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EventContent, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EventContent, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-2">事项时间</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EventTime, new { htmlAttributes = new { @class = "ui_timepicker form-control" } })
                    @Html.ValidationMessageFor(model => model.EventTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("返回", "Index")
    </div>

            <!--以上为模板内容-->
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
